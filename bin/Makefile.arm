DEP=$(SRCS:.cpp=.d)
SADEP=$(SASRCS:.cpp=.d)
-include $(DEP)
-include $(SADEP)


all: clean $(SRCS) $(SASRCS) $(SAEXE) $(EXE)

$(EXE): $(OBJS) $(BUILD_NUMBER_FILE).c
	$(CPP) -Wl,-rpath-link=/home/djclarke/raspberrypi/rootfs/usr/lib --sysroot=/home/djclarke/raspberrypi/rootfs $(OBJS) -o $(EXE) $(LDFLAGS)
#	scp $(EXE) pi@nimrod:~/nimrod

$(SAEXE): $(SAOBJS)
	$(CPP) -Wl,-rpath-link=/home/djclarke/raspberrypi/rootfs/usr/lib --sysroot=/home/djclarke/raspberrypi/rootfs $(SAOBJS) -o $(SAEXE) $(LDFLAGS) 

.cpp.o: 
	$(CPP) $(CFLAGS) -c $< -o $@
	
$(BUILD_NUMBER_FILE).o: $(BUILD_NUMBER_FILE).c
	bash -c "../scripts/build-num.sh"
	$(CC) $(CFLAGS) -c $(BUILD_NUMBER_FILE).c

    
clean:
	rm -rf *.o
	rm -rf $(DEP)
	rm -rf $(EXE)
	rm -rf $(SAEXE)

	
	